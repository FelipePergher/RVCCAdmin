@model LigaCancer.Models.FormModel.PresenceFormModel

<form id="editPresenceForm" asp-action="EditPresence"
      role="form"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="error"
      data-ajax-success="editSuccess"
      data-ajax-loading="#submitSpinner">

    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="PatientId" class="control-label"></label>
            <input asp-for="PatientId" class="form-control" readonly />
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label label-required"></label>
            <input asp-for="Date" type="text" class="form-control"/>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Time" class="control-label label-required"></label>
            <input asp-for="Time" readonly type="text" class="form-control"/>
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>

    </div>

    <partial name="_ModalFooter"  />

</form>
