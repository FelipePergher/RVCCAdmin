@page
@model ResetPasswordModel
@{
    Layout = "_LayoutBaseAdmin";
    ViewData["Title"] = "Redefinir Senha";
}

<div class="col-md-6">
    <div class="card-group">
        <div class="card p-4">
            <form method="post">
                <div class="card-body">
                    <h1>@ViewData["Title"]</h1>
                    <h4>Redefina sua senha.</h4>
                    <input asp-for="ResetPassword.Code" type="hidden" />

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                            <input asp-for="ResetPassword.Email" type="email" class="form-control" placeholder="Email">
                        </div>
                        <span asp-validation-for="ResetPassword.Email" class="text-danger ml-5"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-passport"></i>
                                </span>
                            </div>
                            <input asp-for="ResetPassword.Password" type="password" class="form-control" placeholder="Senha">
                            <i class="eye-password fas fa-eye-slash eyePassword"></i>
                        </div>
                        <span asp-validation-for="ResetPassword.Password" class="text-danger ml-5"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-passport"></i>
                                </span>
                            </div>
                            <input asp-for="ResetPassword.ConfirmPassword" type="password" class="form-control" placeholder="Confirmação senha">
                            <i class="eye-password fas fa-eye-slash eyePassword"></i>
                        </div>
                        <span asp-validation-for="ResetPassword.ConfirmPassword" class="text-danger ml-5"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary float-right">Enviar</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <environment names="Development">
        <script src="~/js/admin/reset-password.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/reset-password.min.js" asp-append-version="true"></script>
    </environment>
}
