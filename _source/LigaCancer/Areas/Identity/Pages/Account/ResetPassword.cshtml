@page
@model ResetPasswordModel
@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Redefinir Senha";
}

@section styles {
    <environment names="Development">
        <link href="~/dist/css/reset-password.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/reset-password.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<div class="col-md-6">
    <div class="card-group">
        <div class="card p-4">
            <form id="resetPasswordForm" method="post">
                <div class="card-body">
                    <h1>@ViewData["Title"]</h1>
                    <input asp-for="ResetPassword.Code" type="hidden" />

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <span class="fa fa-user"></span>
                                </span>
                            </div>
                            <input asp-for="ResetPassword.Email" type="email" class="form-control" placeholder="Email">
                        </div>
                        <span asp-validation-for="ResetPassword.Email" class="text-danger ml-5"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <span class="fa fa-passport"></span>
                                </span>
                            </div>
                            <input asp-for="ResetPassword.Password" type="password" class="form-control" placeholder="Senha">
                            <span class="eye-password fas fa-eye-slash eyePassword"></span>
                        </div>
                        <span asp-validation-for="ResetPassword.Password" class="text-danger ml-5"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <span class="fa fa-passport"></span>
                                </span>
                            </div>
                            <input asp-for="ResetPassword.ConfirmPassword" type="password" class="form-control" placeholder="Confirmação senha">
                            <span class="eye-password fas fa-eye-slash eyePassword"></span>
                        </div>
                        <span asp-validation-for="ResetPassword.ConfirmPassword" class="text-danger ml-5"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary float-right">
                                Enviar
                                <span id="submitSpinner" class="fa fa-spinner fa-pulse" style="display: none;"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section scripts {
    <environment names="Development">
        <script src="~/dist/js/reset-password.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/reset-password.bundle.js" asp-append-version="true"></script>
    </environment>
}