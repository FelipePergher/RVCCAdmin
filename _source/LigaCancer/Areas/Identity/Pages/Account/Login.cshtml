@page
@model LoginModel
@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Log in";
}

@section styles {
    <environment names="Development">
        <link href="~/dist/css/login.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/login.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<div class="col-md-6">
    <div class="card-group">
        <div class="card p-4">

            <form id="loginForm" method="post" class="card-body">
                <div class="card-body">
                    <h1>Login</h1>

                    @if (Model.Login.ShowResend)
                    {
                        <div class="alert alert-warning">
                            Email ainda não verificado <a asp-page="/Account/ResendConfirmEmail" asp-route-email="@Model.Login.Email">clique aqui</a> para reenviar o e-mail de verificação
                        </div>
                    }

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                            <input asp-for="Login.Email" type="email" class="form-control" placeholder="Email">
                        </div>
                        <span asp-validation-for="Login.Email" class="text-danger ml-5"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-passport"></i>
                                </span>
                            </div>
                            <input asp-for="Login.Password" type="password" class="form-control" placeholder="Senha" id="password">
                            <i class="eye-password fas fa-eye-slash eyePassword"></i>
                        </div>
                        <span asp-validation-for="Login.Password" class="text-danger ml-5"></span>
                    </div>

                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <a asp-page="./ForgotPassword">Esqueceu a senha?</a>
                        </div>
                        <div class="col-6 text-right">
                            <button class="btn btn-primary px-4" type="submit" id="btn-submit">
                                Login
                                <span id="submitSpinner" class="fa fa-spinner fa-pulse" style="display: none;"></span>
                            </button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <environment names="Development">
        <script src="~/dist/js/login.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/login.bundle.js" asp-append-version="true"></script>
    </environment>
}