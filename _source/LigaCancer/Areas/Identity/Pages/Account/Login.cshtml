@page
@model LoginModel
@{
    Layout = "_LayoutBaseAdmin";
    ViewData["Title"] = "Log in";
}

<div class="col-md-6">
    <div class="card-group">
        <div class="card p-4">

            <form id="account" method="post" class="card-block">
                <div class="card-body">
                    <h1>Login</h1>

                    @if (Model.Login.ShowResend)
                    {
                        <div class="alert alert-warning">
                            Email ainda não verificado <a asp-page="/Account/ResendConfirmEmail" asp-route-email="@Model.Login.Email">clique aqui</a> para reenviar o e-mail de verificação
                        </div>
                    }

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                            <input asp-for="Login.Email" type="email" class="form-control" placeholder="Email">
                        </div>
                        <span asp-validation-for="Login.Email" class="text-danger ml-5"></span>
                    </div>

                    <div class="form-group">
                        <div class="input-group mt-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-passport"></i>
                                </span>
                            </div>
                            <input asp-for="Login.Password" type="password" class="form-control" placeholder="Senha">
                        </div>
                        <span asp-validation-for="Login.Password" class="text-danger ml-5"></span>
                    </div>

                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <a asp-page="./ForgotPassword">Esqueceu a senha?</a>
                        </div>
                        <div class="col-6 text-right">
                            <button class="btn btn-primary px-4" type="submit">Login</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
    <environment names="Development">
        <script src="~/js/login.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/login.min.js" asp-append-version="true"></script>
    </environment>
}