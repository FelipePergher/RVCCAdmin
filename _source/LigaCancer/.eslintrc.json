{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true,
    "jquery": true
  },
  "globals": {
    "getStyle": true,
    "setCorrectPhoneMask": true,
    "SPMaskBehavior": true,
    "hexToRgba": true,
    "__dirname": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": [ "error", "always" ],
    "indent": [
      "error",
      4,
      { "SwitchCase": 1 }
    ],
    "quotes": [ "error", "double" ]
  }
}
