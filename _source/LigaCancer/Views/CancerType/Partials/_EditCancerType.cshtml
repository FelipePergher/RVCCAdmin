@model LigaCancer.Models.FormModel.CancerTypeFormModel

<form id="editCancerTypeForm" asp-action="EditCancerType"
      role="form"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="error"
      data-ajax-success="editSuccess"
      data-ajax-loading="#submitSpinner">

    <div class="modal-body form-horizontal">
        <input asp-for="CancerTypeId" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <partial name="_ModalFooter"  />

</form>
