@model RVCC.Models.SearchModel.VisitorAttendanceTypeSearchModel
@{
    ViewData["Title"] = "Visitantes do Atendimento";
}

@section styles {
    <environment names="Development">
        <link href="~/dist/css/visitor-attendance.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/visitor-attendance.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            @ViewData["Title"]
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <span class="fas fa-filter"></span> Pesquisar
                                <div class="card-header-actions">
                                    <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#filterCollapse" aria-expanded="true">
                                        <span class="fa fa-minus"></span>
                                    </a>
                                </div>
                            </div>
                            <div class="card-body collapse show" id="filterCollapse">
                                <form id="searchForm">
                                    <div class="form-row form-group">
                                        <div class="col-lg-3">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="Attendance"></label>
                                            <input asp-for="Attendance" class="form-control" />
                                            <span asp-validation-for="Attendance" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="DateFrom"></label>
                                            <input asp-for="DateFrom" type="text" class="form-control" />
                                            <span asp-validation-for="DateFrom" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="DateTo"></label>
                                            <input asp-for="DateTo" type="text" class="form-control" />
                                            <span asp-validation-for="DateTo" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-row form-group justify-content-end">
                                        <div class="col-lg-3 d-flex justify-content-end">
                                            <button type="reset" class="btn btn-secondary">
                                                <span class="fas fa-eraser"></span> Limpar
                                            </button>
                                            <button type="submit" class="btn btn-primary ml-1">
                                                <span class="fas fa-filter"></span> Filtrar
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <span class="fas fa-gift"></span> @ViewData["Title"]
                            </div>
                            <div class="card-body">
                                <div class="form-inline float-right">
                                    <a id="addVisitorAttendanceButton" asp-action="AddVisitorAttendance" data-title="Adicionar Visitante Atendimento " data-toggle="modal" data-target="#modal-action" class="btn btn-primary">
                                        <span class="fa fa-plus"></span> Adicionar Visitante ao Atendimento
                                    </a>
                                </div>

                                <table class="table table-bordered table-striped text-center" id="visitorAttendanceTable" aria-describedby="Tabela de visitantes do atendimento"></table>
                            </div>

                        </div>
                    </div>
                </div>
                <!--/col-->

            </div>
            <!--/row-->

        </div>
    </div>
    <!-- /.container-fluid -->
</main>

<partial name="_Modal" />

@section scripts {
    <environment names="Development">
        <script src="~/dist/js/visitor-attendance.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/visitor-attendance.bundle.js" asp-append-version="true"></script>
    </environment>
}