@model RVCC.Models.FormModel.VisitorAttendanceTypeFormModel

<form id="addVisitorAttendanceTypeForm" asp-action="AddVisitorAttendanceType" method="post">

    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="VisitorId" class="control-label label-required"></label>
            <select asp-for="VisitorId" asp-items="Model.Visitors" class="select2 form-control"
                    data-theme="bootstrap"
                    data-language="pt-BR"
                    data-placeholder="Visitante"
                    data-allow-clear="true">
                <option value=""></option>
            </select>
            <span asp-validation-for="VisitorId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AttendantId" class="control-label label-required"></label>
            <select asp-for="AttendantId" asp-items="Model.Attendants" class="select2 form-control"
                    data-theme="bootstrap"
                    data-language="pt-BR"
                    data-placeholder="Atendente"
                    data-allow-clear="true">
                <option value=""></option>
            </select>
            <span asp-validation-for="AttendantId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date" class="control-label label-required"></label>
            <input asp-for="Date" type="text" class="form-control" data-date-end-date="0d" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Attendance" class="control-label label-required"></label>
            <select asp-for="Attendance" asp-items="Model.AttendanceTypes" class="select2 form-control"
                    data-theme="bootstrap"
                    data-language="pt-BR"
                    data-placeholder="Atendimentos"
                    data-allow-clear="true">
                <option value=""></option>
            </select>
            <span asp-validation-for="Attendance" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Observation" class="control-label"></label>
            <textarea asp-for="Observation" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Observation" class="text-danger"></span>
        </div>
    </div>

    <partial name="_ModalFooter" />

</form>
