@using Microsoft.AspNetCore.Identity
@using RVCC.Data.Models
@using RVCC.Data.Models.Domain

@inject SignInManager<ApplicationUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav navbar-nav ml-auto mr-4">
        <li class="nav-item dropdown">
            <a class="nav-link nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="fa fa-user"></span>
                <span>@User.Identity.Name</span>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "Admin" })" method="post">
                    <button type="submit" class="dropdown-item">
                        <span class="fa fa-lock"></span> Sair
                    </button>
                </form>
                <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="dropdown-item">
                    <span class="fa fa-user"></span> Trocar Senha
                </a>
            </div>
        </li>
    </ul>

}
