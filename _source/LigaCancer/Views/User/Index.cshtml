@model IEnumerable<LigaCancer.Models.UserViewModels.UserListViewModel>
@using LigaCancer.Code
@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            Usuários
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <i class="fa fa-address-card-o"></i> Usuários
                            </div>
                            <div class="card-block">
                                <div class="form-inline">
                                    <div class="form-group">
                                        <div class="btn-group">
                                            <a asp-action="AddUser" data-toggle="modal" data-target="#modal-action-user" class="btn btn-primary">
                                                <i class="fa fa-plus"></i> Adicionar Usuário
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <hr />

                                <table class="table table-bordered table-striped table-condensed text-center" id="userTable">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FirstName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Email)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Role)
                                            </th>
                                            <th>
                                                Ações
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @item.FirstName @item.LastName
                                                </td>
                                                <td>
                                                    @item.Email
                                                </td>
                                                <td>
                                                    @item.Role
                                                </td>
                                                <td>
                                                    @if (User.Identity.Name != "felipepergher_10@hotmail.com")
                                                    {
                                                        <a asp-action="EditUser" asp-route-id="@item.UserId" data-toggle="modal" data-target="#modal-action-user" class="btn btn-secondary">
                                                            <i class="fa fa-user-edit"></i> Editar
                                                        </a>
                                                        <a asp-action="DeleteUser" asp-route-id="@item.UserId" data-toggle="modal" data-target="#modal-action-user" class="btn btn-danger">
                                                            <i class="fa fa-times"></i> Deletar
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--/col-->

                </div>
                <!--/row-->

            </div>
        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>

<partial name="_Modal" model='new BootstrapModel { Id = "modal-action-user", AreaLabeledId = "modal-action-user-label", Size = ModalSize.Medium }' />

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/user.js"></script>
}