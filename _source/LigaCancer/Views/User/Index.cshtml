@model LigaCancer.Models.SearchModel.UserSearchModel
@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <environment names="Development">
        <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/datatables.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            Usuários
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-filter"></i> Pesquisar
                                <div class="card-header-actions">
                                    <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#filterCollapse" aria-expanded="true">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="card-block collapse show" id="filterCollapse">
                                <form id="searchForm">
                                    <div class="form-row form-group">
                                        <div class="col-lg-3">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" placeholder="Nome" />
                                        </div>
                                        <div class="col-lg-3 filter-button">
                                            <button type="reset" class="btn btn-secondary">
                                                <i class="fas fa-eraser"></i> Limpar
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-filter"></i> Filtrar
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-users"></i> Usuários
                            </div>
                            <div class="card-block">
                                <div class="form-inline float-right">
                                    <a id="addUserButton" asp-action="AddUser" data-title="Adicionar Usuário" data-toggle="modal" data-target="#modal-action" class="btn btn-primary">
                                        <i class="fa fa-plus"></i> Adicionar Usuário
                                    </a>
                                </div>

                                <table class="table table-bordered table-striped table-condensed text-center" id="userTable"></table>
                            </div>
                        </div>
                    </div>
                    <!--/col-->

                </div>
                <!--/row-->

            </div>
        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>

<partial name="_Modal" />

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
    <environment names="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/js/user.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/user.min.js" asp-append-version="true"></script>
    </environment>
}