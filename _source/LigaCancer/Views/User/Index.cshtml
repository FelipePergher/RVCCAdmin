@model RVCC.Models.SearchModel.UserSearchModel
@{
    ViewData["Title"] = "Usuários";
}

@section styles {
    <environment names="Development">
        <link href="~/dist/css/user.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/user.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            Usuários
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <span class="fas fa-filter"></span> Pesquisar
                                <div class="card-header-actions">
                                    <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#filterCollapse" aria-expanded="true">
                                        <span class="fa fa-minus"></span>
                                    </a>
                                </div>
                            </div>
                            <div class="card-body collapse show" id="filterCollapse">
                                <form id="searchForm">
                                    <div class="form-row form-group">
                                        <div class="col-lg-3">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" placeholder="Nome" />
                                        </div>
                                        <div class="col-lg-3 filter-button">
                                            <button type="reset" class="btn btn-secondary">
                                                <span class="fas fa-eraser"></span> Limpar
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <span class="fas fa-filter"></span> Filtrar
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <span class="fas fa-users"></span> Usuários
                            </div>
                            <div class="card-body">
                                <div class="form-inline float-right">
                                    <a id="addUserButton" asp-action="AddUser" data-title="Adicionar Usuário" data-toggle="modal" data-target="#modal-action" class="btn btn-primary">
                                        <span class="fa fa-plus"></span> Adicionar Usuário
                                    </a>
                                </div>

                                <table width="100%" class="table table-bordered table-striped text-center" id="userTable"></table>
                            </div>
                        </div>
                    </div>
                    <!--/col-->

                </div>
                <!--/row-->

            </div>
        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>

<partial name="_Modal" />

