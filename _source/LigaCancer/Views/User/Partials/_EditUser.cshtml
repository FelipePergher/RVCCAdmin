@model LigaCancer.Models.FormModel.EditUserFormModel

<form id="editUserForm" asp-action="EditUser"
      role="form"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="error"
      data-ajax-success="editSuccess"
      data-ajax-loading="#submitSpinner">

    <div class="modal-body form-horizontal">
        <input asp-for="UserId" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="control-label"></label>
            <select asp-for="Role" asp-items="Model.ApplicationRoles" class="form-control userSelect2" style="width: 100%" 
                data-theme="bootstrap"
                data-language="pt-BR"
                data-placeholder="Regra"
                data-width="resolve"
                data-minimum-results-for-search="Infinity"
                data-container-css-class="select2NoSearch">
                <option value=""></option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>

    <partial name="_ModalFooter"  />

</form>
