@model LigaCancer.Models.FormModel.AddressFormModel
@using LigaCancer.Code

<form id="addAddressForm" asp-action="AddAddress"
      role="form"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="error"
      data-ajax-success="addAddressSuccess"
      data-ajax-loading="#submitSpinner">

    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="Street" class="control-label"></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Neighborhood" class="control-label"></label>
            <input asp-for="Neighborhood" class="form-control" />
            <span asp-validation-for="Neighborhood" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HouseNumber" class="control-label"></label>
            <input asp-for="HouseNumber" class="form-control" />
            <span asp-validation-for="HouseNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Complement" class="control-label"></label>
            <input asp-for="Complement" class="form-control" />
            <span asp-validation-for="Complement" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ResidenceType" class="control-label"></label>
            <select asp-for="ResidenceType" asp-items="Html.GetEnumSelectList<Globals.ResidenceType>()" class="form-control addressSelect2"
                    data-theme="bootstrap"
                    data-language="pt-BR"
                    data-placeholder="Tipo de Residência"
                    data-allow-clear="true"
                    data-minimum-results-for-search="Infinity"
                    data-container-css-class="select2NoSearch">
                <option value=""></option>
            </select>
            <span asp-validation-for="ResidenceType" class="text-danger"></span>
        </div>
        <div class="form-group" id="monthlyResidence" style="display: none;">
            <label asp-for="MonthlyAmmountResidence" class="control-label"></label>
            <input asp-for="MonthlyAmmountResidence" class="form-control" />
            <span asp-validation-for="MonthlyAmmountResidence" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ObservationAddress" class="control-label"></label>
            <input asp-for="ObservationAddress" class="form-control" />
            <span asp-validation-for="ObservationAddress" class="text-danger"></span>
        </div>
    </div>

    <partial name="_ModalFooter" />

</form>
