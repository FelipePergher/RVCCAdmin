@model RVCC.Models.FormModel.AdminFormModel

<form id="adminForm" asp-controller="Admin" asp-action="Index" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="MinSalary" class="control-label"></label>
        <input asp-for="MinSalary" class="form-control" />
        <span asp-validation-for="MinSalary" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary float-right">
        Enviar
        <span id="submitSpinner" class="fa fa-spinner fa-pulse" style="display: none;"></span>
    </button>
</form>
