@model RVCC.Models.FormModel.PresenceFormModel

<form id="editPresenceForm" asp-action="EditPresence" method="post" > 
    
    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="PatientId" class="control-label"></label>
            <input asp-for="PatientId" class="form-control" readonly />
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label label-required"></label>
            <input asp-for="Date" type="text" class="form-control" data-date-end-date="0d" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Time" class="control-label label-required"></label>
            <div class="input-group date" id="timePicker" data-target-input="nearest">
                <input asp-for="Time" type="text" class="form-control datetimepicker-input" data-target="#timePicker" />
                <div class="input-group-append" data-target="#timePicker" data-toggle="datetimepicker">
                    <div class="input-group-text">
                        <span class="far fa-clock"></span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>

    </div>

    <partial name="_ModalFooter"  />

</form>
