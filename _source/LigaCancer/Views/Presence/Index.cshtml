@model LigaCancer.Models.SearchViewModel.PresenceSearchViewModel
@using LigaCancer.Code
@{
    ViewData["Title"] = "Presenças";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <environment names="Development">
        <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
        <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
        <link href="~/lib/select2/theme/select2-bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/gijgo/combined/css/gijgo.min.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        @*<link href="~/dist/css/presence.min.css" rel="stylesheet" asp-append-version="true" />*@
    </environment>
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            Presença
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <i class="fa fa-male"></i> Presença
                            </div>
                            <div class="card-block">
                                <div class="form-inline">
                                    <div class="form-group">
                                        <div class="btn-group">
                                            <a asp-action="AddPresence" data-toggle="modal" data-target="#modal-action" class="btn btn-primary">
                                                <i class="fa fa-plus"></i> Adicionar Presença
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <form id="searchForm">
                                    <div class="form-row form-group">
                                        <div class="col-lg-3">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="Surname"></label>
                                            <input asp-for="Surname" class="form-control" />
                                            <span asp-validation-for="Surname" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="DateFrom"></label>
                                            <input asp-for="DateFrom" type="text" class="form-control date" />
                                            <span asp-validation-for="DateFrom" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="DateTo"></label>
                                            <input asp-for="DateTo" type="text" class="form-control date" />
                                            <span asp-validation-for="DateTo" class="text-danger"></span>
                                        </div>
                                        <div class="form-inline">
                                            <div class="form-group">
                                                <div class="btn-group">
                                                    <button type="submit" class="btn btn-primary">Filtrar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                                <hr />
                                
                                <table class="table table-bordered table-striped table-condensed text-center" id="presenceTable"></table>

                            </div>
                        </div>
                    </div>
                </div>
                <!--/col-->

            </div>
            <!--/row-->

        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>

<partial name="_Modal" model='new BootstrapModel { Id = "modal-action", AreaLabeledId = "modal-action-label", Size = Globals.ModalSize.Medium }' />

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <environment names="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/select2/js/select2.min.js"></script>
        <script src="~/js/presence.js"></script>
        <script src="~/lib/gijgo/combined/js/gijgo.min.js"></script>
    </environment>
    <environment exclude="Development">
        @*<script src="~/dist/js/presence.min.js" asp-append-version="true"></script>*@
    </environment>
}