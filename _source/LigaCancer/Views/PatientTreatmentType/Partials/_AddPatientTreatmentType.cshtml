@model RVCC.Models.FormModel.PatientTreatmentTypeFormModel

<form id="addPatientTreatmentTypeForm" asp-action="AddPatientTreatmentType" method="post">

    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="TreatmentType" class="control-label"></label>
            <select asp-for="TreatmentType" asp-items="Model.TreatmentTypes" class="form-control" style="width: 100%"
                    data-theme="bootstrap"
                    data-language="pt-BR"
                    data-placeholder="Tratamentos"
                    data-width="resolve"
                    data-allow-clear="true">
                <option></option>
            </select>
            <span asp-validation-for="TreatmentType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartDate" class="control-label label-required"></label>
            <input asp-for="StartDate" type="text" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate" class="control-label label-required"></label>
            <input asp-for="EndDate" type="text" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Note" class="control-label"></label>
            <textarea asp-for="Note" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>

    </div>

    <partial name="_ModalFooter" />

</form>
