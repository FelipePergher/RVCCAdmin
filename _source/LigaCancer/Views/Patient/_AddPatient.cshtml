@model LigaCancer.Models.FormViewModel.PatientViewModel
@using LigaCancer.Code

<form asp-action="AddPatient"
      role="form"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="AjaxError"
      data-ajax-success="AjaxSuccess"
      data-ajax-loading="#submitSpinner">

    <partial name="_ModalHeader" model='new ModalHeader { Heading = "Adicionar Paciente" }' />

    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h4>Paciente</h4>
        <hr />
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="RG" class="control-label"></label>
                <input asp-for="RG" class="form-control" />
                <span asp-validation-for="RG" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Profession" class="control-label"></label>
                <input asp-for="Profession" class="form-control"/>
                <span asp-validation-for="Profession" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="MonthlyIncome" class="control-label"></label>
                <input asp-for="MonthlyIncome" class="form-control" />
                <span asp-validation-for="MonthlyIncome" class="text-dange"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Sex" class="control-label"></label>
                <select asp-for="Sex" asp-items="Html.GetEnumSelectList<Globals.Sex>()" class="form-control"></select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CivilState" class="control-label"></label>
                <select asp-for="CivilState" asp-items="Html.GetEnumSelectList<Globals.CivilState>()" class="form-control"></select>
                <span asp-validation-for="CivilState" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" type="text" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <div class="checkbox">
                    <label>
                        <input asp-for="FamiliarityGroup" /> @Html.DisplayNameFor(model => model.FamiliarityGroup)
                    </label>
                </div>
            </div>
        </div>

        <h4 class="mt-4">Naturalidade</h4>
        <hr />
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Naturality.City" class="control-label"></label>
                <input asp-for="Naturality.City" class="form-control" />
                <span asp-validation-for="Naturality.City" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Naturality.State" class="control-label"></label>
                <input asp-for="Naturality.State" class="form-control" />
                <span asp-validation-for="Naturality.State" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Naturality.Country" class="control-label"></label>
                <input asp-for="Naturality.Country" class="form-control" />
                <span asp-validation-for="Naturality.Country" class="text-danger"></span>
            </div>
        </div>

        <h4 class="mt-4">Informação do Paciente</h4>
        <hr />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="PatientInformation.CancerTypes" class="control-label"></label>
                <select asp-for="PatientInformation.CancerTypes" asp-items="Model.SelectCancerTypes" class="form-control customSelect2" data-tags="true"></select>
                <span asp-validation-for="PatientInformation.CancerTypes" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PatientInformation.Medicines" class="control-label"></label>
                <select asp-for="PatientInformation.Medicines" asp-items="Model.SelectMedicines" class="form-control customSelect2" data-tags="true"></select>
                <span asp-validation-for="PatientInformation.Medicines" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PatientInformation.Doctors" class="control-label"></label>
                <select asp-for="PatientInformation.Doctors" asp-items="Model.SelectDoctors" class="form-control customSelect2" data-tags="true"></select>
                <span asp-validation-for="PatientInformation.Doctors" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PatientInformation.TreatmentPlaces" class="control-label"></label>
                <select asp-for="PatientInformation.TreatmentPlaces" asp-items="Model.SelectTreatmentPlaces" class="form-control customSelect2" data-tags="true"></select>
                <span asp-validation-for="PatientInformation.TreatmentPlaces" class="text-danger"></span>
            </div>
        </div>
    </div>

    <partial name="_ModalFooter" model="new ModalFooter { }" />

</form>
