@model RVCC.Models.ViewModel.PatientPrintViewModel
@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Print Patient Name";
}

@section styles {
    <environment names="Development">
        <link href="~/dist/css/patient-print.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/patient-print.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<div class="container">
    <div class="row">
        <div class="col-3">
            <img src="~/img/logo/logo-oficial.png" width="150" style="width: 150px;" />
        </div>

        <div class="col-9 text-center">
            <p class="h1">Rede Videirense de Combate ao Câncer</p>
            <p class="h3">Rua Laudo Muller, 288</p>
            <p class="h3">Videira-SC</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <p class="h2">
                Informações X
            </p>
        </div>
        <hr class="col-12" />

        <div class="col-6">
            <label style="font-weight: bold;">Nome Completo</label>
        </div>
        <div class="col-6">
            @Model.PatientProfile.FirstName
        </div>
        <hr class="col-12" />

        <div class="col-6">
            <label style="font-weight: bold;">Full Name</label>
        </div>
        <div class="col-6">
            Jamshaid Kamran
        </div>
        <hr class="col-12" />

        <div class="col-6">
            <label style="font-weight: bold;">Full Name</label>
        </div>
        <div class="col-6">
            Jamshaid Kamran
        </div>
        <hr class="col-12" />
    </div>
    
    <div class="row mt-5">
        <div class="col-12">
            <p class="h2">
                Informações Y
            </p>
        </div>
        <hr class="col-12" />

        <div class="col-6">
            <label style="font-weight: bold;">Nome Completo</label>
        </div>
        <div class="col-6">
            @Model.PatientProfile.FirstName
        </div>
        <hr class="col-12" />

        <div class="col-6">
            <label style="font-weight: bold;">Full Name</label>
        </div>
        <div class="col-6">
            Jamshaid Kamran
        </div>
        <hr class="col-12" />

        <div class="col-6">
            <label style="font-weight: bold;">Full Name</label>
        </div>
        <div class="col-6">
            Jamshaid Kamran
        </div>
        <hr class="col-12" />
    </div>
    
    <div class="row mt-5">
        <div class="col-12">
            <p class="h2">
                Informações Table
            </p>
        </div>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
            </tr>
            </tbody>
        </table>
    </div>

</div>


@section scripts {
    <environment names="Development">
        <script src="~/dist/js/patient-print.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/patient-print.bundle.js" asp-append-version="true"></script>
    </environment>
}