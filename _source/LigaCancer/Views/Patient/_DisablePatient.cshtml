@model LigaCancer.Models.MedicalViewModels.DisablePatientViewModel
@using LigaCancer.Code

<form asp-action="DisablePatient"
      role="form"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="AjaxError"
      data-ajax-success="AjaxSuccess"
      data-ajax-loading="#submitSpinner">

    <partial name="_ModalHeader" model='new ModalHeader { Heading = "Desativar Paciente" }' />

    <div class="modal-body form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="DisablePatientType" class="control-label"></label>
            <select asp-for="DisablePatientType" asp-items="@Html.GetEnumSelectList<Globals.DisablePatientType>()" class="form-control"></select>
            <span asp-validation-for="DisablePatientType"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateTime" class="control-label"></label>
            <input asp-for="DateTime" asp-format="" class="form-control" />
            <span asp-validation-for="DateTime"></span>
        </div>
    </div>
    
    <partial name="_ModalFooter" model='new ModalFooter { SubmitButtonText = "Desativar" }' />

</form>

