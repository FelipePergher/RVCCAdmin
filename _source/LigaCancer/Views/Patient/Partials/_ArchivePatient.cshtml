@using RVCC.Business
@model RVCC.Models.FormModel.ArchivePatientFormModel

<form id="archivePatientForm" asp-action="ArchivePatient" method="post" >

    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="ArchivePatientType" class="control-label"></label>
            <select asp-for="ArchivePatientType" asp-items="Html.GetEnumSelectList<Enums.ArchivePatientType>()" class="form-control"></select>
            <span asp-validation-for="ArchivePatientType"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateTime" class="control-label"></label>
            <input asp-for="DateTime" type="text" asp-format="" class="form-control" />
            <span asp-validation-for="DateTime" class="text-danger"></span>
        </div>
    </div>
    
    <partial name="_ModalFooter"/>

</form>
