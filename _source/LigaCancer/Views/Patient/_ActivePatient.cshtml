@model string
@using LigaCancer.Code

<form asp-action="ActivePatient"
      role="form"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="AjaxError"
      data-ajax-success="AjaxSuccess"
      data-ajax-loading="#submitSpinner">

    <partial name="_ModalHeader" model='new ModalHeader { Heading = "Reativar Paciente" }' />

    <div class="modal-body form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        Você quer reativar o paciente <strong>@Model</strong>?
    </div>

    <partial name="_ModalFooter" model='new ModalFooter { SubmitButtonText = "Reativar" }' />

</form>

