@model RVCC.Models.FormModel.PatientExpenseTypeFormModel

<form id="editPatientExpenseTypeForm" asp-action="EditPatientExpenseType" method="post">

    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="ExpenseType" class="control-label"></label>
             <select asp-for="ExpenseType" asp-items="Model.ExpenseTypes" class="form-control" style="width: 100%"
                    data-theme="bootstrap"
                    data-language="pt-BR"
                    data-placeholder="Despesas"
                    data-width="resolve"
                    data-allow-clear="true">
            </select>
            <span asp-validation-for="ExpenseType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Value" class="control-label"></label>
            <input asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>

    <partial name="_ModalFooter" />

</form>
