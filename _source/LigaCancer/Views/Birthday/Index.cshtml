@model RVCC.Models.SearchModel.BirthdaySearchModel
@{
    ViewData["Title"] = "Aniversariantes";
}

@section styles {
    <environment names="Development">
        <link href="~/dist/css/birthday.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/birthday.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            Aniversariantes
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <span class="fas fa-filter"></span> Pesquisar
                                <div class="card-header-actions">
                                    <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#filterCollapse" aria-expanded="true">
                                        <span class="fa fa-minus"></span>
                                    </a>
                                </div>
                            </div>
                            <div class="card-body collapse show" id="filterCollapse">
                                <form id="searchForm">
                                    <div class="form-row form-group">
                                        <div class="col-lg-3">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="Month"></label>
                                            <input asp-for="Month" type="text" class="form-control" />
                                            <span asp-validation-for="Month" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-3 filter-button">
                                            <button type="reset" class="btn btn-secondary">
                                                <span class="fas fa-eraser"></span> Limpar
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <span class="fas fa-filter"></span> Filtrar
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <span class="fas fa-address-book"></span> Aniversariantes
                            </div>
                            <div class="card-body">
                                <table width="100%" class="table table-bordered table-striped text-center" id="birthdayTable"></table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/col-->

            </div>
            <!--/row-->

        </div>
    </div>
    <!-- /.container-fluid -->
</main>

@section scripts {
    <environment names="Development">
        <script src="~/dist/js/birthday.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/birthday.bundle.js" asp-append-version="true"></script>
    </environment>
}