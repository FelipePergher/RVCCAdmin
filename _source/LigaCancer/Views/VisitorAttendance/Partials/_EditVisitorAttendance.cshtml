@model RVCC.Models.FormModel.VisitorAttendanceFormModel

<form id="editVisitorAttendanceForm" asp-action="EditVisitorAttendance" method="post" > 
    
    <div class="modal-body form-horizontal">
        
        <input asp-for="VisitorIdHidden"/>
        <input asp-for="AttendanceTypeIdHidden"/>

        <div class="form-group">
            <label asp-for="VisitorId" class="control-label"></label>
            <input asp-for="VisitorId" class="form-control" value="@Model.VisitorId" readonly=""/>
            <span asp-validation-for="VisitorId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Attendance" class="control-label"></label>
            <input asp-for="Attendance" class="form-control" value="@Model.Attendance" readonly="" />
            <span asp-validation-for="Attendance" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date" class="control-label label-required"></label>
            <input asp-for="Date" type="text" class="form-control" data-date-end-date="0d"/>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Observation" class="control-label label-required"></label>
            <input asp-for="Observation" class="form-control"/>
            <span asp-validation-for="Observation" class="text-danger"></span>
        </div>
    </div>

    <partial name="_ModalFooter"  />

</form>
