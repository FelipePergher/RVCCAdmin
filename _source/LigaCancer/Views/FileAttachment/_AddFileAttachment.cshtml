@model LigaCancer.Models.FormModel.FileAttachmentFormModel
@using LigaCancer.Code

<form id="formAddFile" asp-action="AddFileAttachment" method="post" enctype="multipart/form-data">

    <div class="modal-body form-horizontal" id="">
        <div class="form-group">
            <label asp-for="FileName" class="control-label"></label>
            <input asp-for="FileName" class="form-control" />
            <span asp-validation-for="FileName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FileCategory" class="control-label"></label>
            <select asp-for="FileCategory" asp-items="Html.GetEnumSelectList<Globals.ArchiveCategorie>()" class="form-control"></select>
            <span asp-validation-for="FileCategory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="File" class="control-label"></label>
            <input asp-for="File" class="form-control" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
    </div>

    <partial name="_ModalFooter"  />

</form>
