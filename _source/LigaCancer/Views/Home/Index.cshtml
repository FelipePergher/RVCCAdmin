@model RVCC.Models.ViewModel.HomeViewModel
@{
    ViewData["Title"] = "Homepage";
}

@section styles {
    <environment names="Development">
        <link href="~/dist/css/home.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/home.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<main class="main">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="card mt-4">
                <div class="card-body">
                    <div class="row">
                        <!-- /.col-->
                        <div class="col-sm-3">
                            <h4 class="card-title mb-0">Presenças</h4>
                        </div>
                        <form class="col-sm-6 form-group row" id="searchForm" method="post">
                            <label class="col-md-3 mt-1" asp-for="ChartDate"></label>
                            <div class="col-md-9">
                                <input asp-for="ChartDate" type="text" class="form-control" data-date-end-date="0d"/>
                                <span asp-validation-for="ChartDate" class="text-danger"></span>
                            </div>
                        </form>
                        <div class="col-sm-3 d-none d-md-block">
                            <div class="btn-group btn-group-toggle float-right mr-3" data-toggle="buttons">
                                <label class="btn btn-outline-secondary">
                                    <input id="day" type="radio" name="chartOptions" class="chartOptions" autocomplete="off"> Dia
                                </label>
                                <label class="btn btn-outline-secondary active">
                                    <input id="month" type="radio" name="chartOptions" class="chartOptions" autocomplete="off" checked> Mês
                                </label>
                                <label class="btn btn-outline-secondary">
                                    <input id="year" type="radio" name="chartOptions" class="chartOptions" autocomplete="off"> Ano
                                </label>
                            </div>
                        </div>
                        <!-- /.col-->
                    </div>
                    <!-- /.row-->
                    <div class="chart-wrapper">
                        <canvas class="chart" id="dayChart"style="display: none;"></canvas>
                        <canvas class="chart" id="monthChart"></canvas>
                        <canvas class="chart" id="yearChart" style="display: none;"></canvas>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row text-center">
                        <div class="col-sm-12 col-md mb-sm-2 mb-0">
                            <div class="text-muted">Pacientes</div>
                            <a asp-action="Index" asp-controller="Patient" class="no-decoration"><strong>@Model.PatientCount</strong></a>
                            <div class="progress progress-xs mt-2">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md mb-sm-2 mb-0">
                            <div class="text-muted">Médicos</div>
                            <a asp-action="Index" asp-controller="Doctor" class="no-decoration"><strong>@Model.DoctorCount</strong></a>
                            <div class="progress progress-xs mt-2">
                                <div class="progress-bar" role="progressbar" style="width:100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md mb-sm-2 mb-0">
                            <div class="text-muted">Remédios</div>
                            <a asp-action="Index" asp-controller="Medicine" class="no-decoration"><strong>@Model.MedicineCount</strong></a>
                            <div class="progress progress-xs mt-2">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md mb-sm-2 mb-0">
                            <div class="text-muted">Cânceres</div>
                            <a asp-action="Index" asp-controller="CancerType" class="no-decoration"><strong>@Model.CancerTypeCount</strong></a>
                            <div class="progress progress-xs mt-2">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md mb-sm-2 mb-0">
                            <div class="text-muted">Locais de tratamento</div>
                            <a asp-action="Index" asp-controller="TreatmentPlace" class="no-decoration"><strong>@Model.TreatmentPlaceCount</strong></a>
                            <div class="progress progress-xs mt-2">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- /.row-->
        </div>
    </div>
</main>

@section scripts {
    <environment names="Development">
        <script src="~/dist/js/home.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/home.bundle.js" asp-append-version="true"></script>
    </environment>
}
