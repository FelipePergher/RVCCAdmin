@using RVCC.Business
@model RVCC.Models.FormModel.FamilyMemberFormModel

<form id="addFamilyMemberForm" asp-action="AddFamilyMember" method="post">

    <div class="modal-body form-horizontal" id="">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Kinship" class="control-label"></label>
            <input asp-for="Kinship" class="form-control" />
            <span asp-validation-for="Kinship" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="control-label"></label>
            <input asp-for="DateOfBirth" type="text" class="form-control" id="dateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="control-label"></label>
            <select asp-for="Sex" asp-items="Html.GetEnumSelectList<Enums.Sex>()" class="form-control"></select>
            <span asp-validation-for="Sex" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MonthlyIncomeMinSalary" class="control-label">@Html.DisplayNameFor(x => x.MonthlyIncomeMinSalary) (R$ @Model.MinSalary.ToString("N2"))</label>
            <input asp-for="MonthlyIncomeMinSalary" class="form-control" />
            <span asp-validation-for="MonthlyIncomeMinSalary" class="text-danger"></span>
        </div>
    </div>

    <partial name="_ModalFooter"  />

</form>
