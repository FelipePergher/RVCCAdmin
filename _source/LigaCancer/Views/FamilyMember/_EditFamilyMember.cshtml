@model LigaCancer.Models.FormViewModel.FamilyMemberViewModel
@using LigaCancer.Code

<form asp-action="EditFamilyMember"
      role="form"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-failure="AjaxError"
      data-ajax-success="AjaxSuccessPatient"
      data-ajax-loading="#submitSpinner">

    <partial name="_ModalHeader" model='new ModalHeader { Heading = "Editar Membro Familiar" }' />

    <div class="modal-body form-horizontal" id="">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h4>
            Editar Membro Familiar
        </h4>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Kinship" class="control-label"></label>
            <input asp-for="Kinship" class="form-control" />
            <span asp-validation-for="Kinship" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="control-label"></label>
            <select asp-for="Sex" asp-items="Html.GetEnumSelectList<Globals.Sex>()" class="form-control"></select>
            <span asp-validation-for="Sex" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MonthlyIncome" class="control-label"></label>
            <input asp-for="MonthlyIncome" class="form-control" />
            <span asp-validation-for="MonthlyIncome" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="PatientId" value="@Model.PatientId" />
    </div>

    <partial name="_ModalFooter" model="new ModalFooter { }" />

</form>
