@model LigaCancer.Data.Models.PatientModels.Doctor

@{
    ViewData["Title"] = "DetailslDoctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-action="Index">Médicos</a>
        </li>
        <li class="breadcrumb-item active">Detalhes @Model.Name</li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <i class="fa fa-address-card-o"></i> Detalhes
                            </div>
                            <div class="card-block">
                                <div>
                                    <h4>Doctor</h4>
                                    <hr />
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Name)
                                        </dd>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.CRM)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.CRM)
                                        </dd>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.RegisterDate)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.RegisterDate)
                                        </dd>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.LastUpdatedDate)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.LastUpdatedDate)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/col-->

                </div>
                <!--/row-->

            </div>
        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>
