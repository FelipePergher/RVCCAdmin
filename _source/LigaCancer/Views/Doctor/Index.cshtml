@model LigaCancer.Models.SearchModel.DoctorSearchModel
@{
    ViewData["Title"] = "Médicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <environment names="Development">
        <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
        <link href="~/lib/datatables-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/datatables.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            Médicos
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-filter"></i> Pesquisar
                                <div class="card-header-actions">
                                    <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#filterCollapse" aria-expanded="true">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="card-block collapse show" id="filterCollapse">
                                <form id="searchForm">
                                    <div class="form-row form-group">
                                        <div class="col-lg-3">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" placeholder="Nome" />
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="CRM"></label>
                                            <input asp-for="CRM" class="form-control" placeholder="CRM" />
                                        </div>
                                        <div class="col-lg-3 filter-button">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-filter"></i> Filtrar
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-user-md"></i> Médicos
                            </div>
                            <div class="card-block">
                                <div class="form-inline float-right">
                                    <a id="addDoctorButton" asp-action="AddDoctor" data-title="Adicionar Médico" data-toggle="modal" data-target="#modal-action" class="btn btn-primary">
                                        <i class="fa fa-plus"></i> Adicionar Médico
                                    </a>
                                </div>

                                <table class="table table-bordered table-striped table-condensed text-center" id="doctorTable"></table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/col-->

            </div>
            <!--/row-->

        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>

<partial name="_Modal"  />

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
    <environment names="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/datatables-buttons/js/dataTables.buttons.min.js"></script>
        <script src="~/lib/datatables-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
        <script src="~/lib/jszip/jszip.min.js"></script>
        <script src="~/lib/pdfmake/pdfmake.min.js"></script>
        <script src="~/lib/pdfmake/vfs_fonts.js"></script>
        <script src="~/lib/datatables-buttons/js/buttons.html5.min.js"></script>
        <script src="~/js/doctor.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/doctor.min.js" asp-append-version="true"></script>
    </environment>
}