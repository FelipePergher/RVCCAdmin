@using LigaCancer.Code
@{
    ViewData["Title"] = "Médicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            Médicos
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <i class="fa fa-address-card-o"></i> Médicos
                            </div>
                            <div class="card-block">
                                <div class="form-inline">
                                    <div class="form-group">
                                        <div class="btn-group">
                                            <a asp-action="AddDoctor" data-toggle="modal" data-target="#modal-action" class="btn btn-primary">
                                                <i class="glyphicon glyphicon-plus"></i> Adicionar Médico
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <hr />

                                <table class="table table-bordered table-striped table-condensed" id="doctorTable">
                                    <thead class="text-center">
                                        <tr>
                                            <th>
                                                Nome
                                            </th>
                                            <th>
                                                CRM
                                            </th>
                                            <th>
                                                Ações
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center"></tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <!--/col-->

                </div>
                <!--/row-->

            </div>
        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>

<a id="linkDelete" asp-action="DeleteDoctor" data-toggle="modal" data-target="#modal-action"></a>
<a id="linkEdit" asp-action="EditDoctor" data-toggle="modal" data-target="#modal-action"></a>
<a id="linkAjaxDT" asp-action="GetDTResponseAsync" data-toggle="modal" data-target="#modal-action"></a>

<partial name="_Modal" model='new BootstrapModel { Id = "modal-action", AreaLabeledId = "modal-action-label", Size = ModalSize.Medium }' />

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/doctor.js"></script>
}