@model RVCC.Models.SearchModel.DoctorSearchModel
@{
    ViewData["Title"] = "Médicos";
}

@section styles {
    <environment names="Development">
        <link href="~/dist/css/doctor.bundle.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/dist/css/doctor.bundle.css" asp-append-version="true" rel="stylesheet" />
    </environment>
}

<main class="main">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            Médicos
        </li>
    </ol>
    <div class="container-fluid">
        <div id="ui-view" style="opacity: 1;">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-filter"></i> Pesquisar
                                <div class="card-header-actions">
                                    <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#filterCollapse" aria-expanded="true">
                                        <i class="fa fa-minus"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="card-body collapse show" id="filterCollapse">
                                <form id="searchForm">
                                    <div class="form-row form-group">
                                        <div class="col-lg-3">
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" placeholder="Nome" />
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="CRM"></label>
                                            <input asp-for="CRM" class="form-control" placeholder="CRM" />
                                        </div>
                                        <div class="col-lg-3 filter-button">
                                            <button type="reset" class="btn btn-secondary">
                                                <i class="fas fa-eraser"></i> Limpar
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-filter"></i> Filtrar
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <i class="fas fa-user-md"></i> Médicos
                            </div>
                            <div class="card-body">
                                <div class="form-inline float-right">
                                    <a id="addDoctorButton" asp-action="AddDoctor" data-title="Adicionar Médico" data-toggle="modal" data-target="#modal-action" class="btn btn-primary">
                                        <i class="fa fa-plus"></i> Adicionar Médico
                                    </a>
                                </div>

                                <table class="table table-bordered table-striped text-center" id="doctorTable"></table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/col-->

            </div>
            <!--/row-->

        </div>
    </div>
    <!-- /.conainer-fluid -->
</main>

<partial name="_Modal" />

@section scripts {
    <environment names="Development">
        <script src="~/dist/js/doctor.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/doctor.bundle.js" asp-append-version="true"></script>
    </environment>
}