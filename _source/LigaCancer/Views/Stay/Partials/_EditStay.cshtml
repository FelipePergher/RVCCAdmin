@model RVCC.Models.FormModel.StayFormModel

<form id="editStayForm" asp-action="EditStay" method="post" > 
    
    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="PatientId" class="control-label"></label>
            <input asp-for="PatientId" class="form-control" readonly />
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date" class="control-label label-required"></label>
            <input asp-for="Date" type="text" class="form-control" data-date-end-date="0d" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Note" class="control-label"></label>
            <textarea asp-for="Note" class="form-control" rows="5" ></textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>

    </div>

    <partial name="_ModalFooter"  />

</form>
